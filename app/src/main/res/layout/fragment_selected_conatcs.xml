<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.eventers.contactapp.fragments.SelectedConatcsFragment"
        tools:showIn="@layout/activity_selected_conatcs"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/total_contacts"
            android:layout_width="@dimen/text_params"
            android:layout_height="@dimen/text_params"
            android:background="@drawable/count_bg"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="10"
            android:layout_marginTop="@dimen/marginstart"
            android:textColor="@android:color/white"
            android:textSize="48sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginstart"
            android:text="@string/total_contacts"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/selected_contacts"
            android:layout_width="@dimen/text_params"
            android:layout_height="@dimen/text_params"
            android:background="@drawable/count_bg"
            android:gravity="center"
            tools:text="2"
            android:textSize="48sp"
            android:textColor="@android:color/white"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginstart"
            android:text="@string/selected_contacts"
            android:textColor="@android:color/background_dark"/>


        <Button
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonHeight"
            android:text="@string/home"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

</ScrollView>
